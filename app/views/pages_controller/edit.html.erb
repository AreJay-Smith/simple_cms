<%= link_to("<< Back to list", {:action => 'index'}, :class => 'back-lin')%>

<div class="Pagess edit">
  <h2>Update Subjects</h2>
  <%= form_for(:page, :url => {:action => 'update', :id => @page.id}) do |f| %>

    <table summary="Page form fields">
      <tr>
        <th>Subject ID</th>
        <td><%= f.text_field(:subject_id) %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Permalink</th>
        <td><%= f.text_field(:permalink) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Update Subject") %>
    </div>

    <% end %>
  </div>
